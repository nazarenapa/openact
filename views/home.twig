{% block scripts %}
	<script type="text/javascript">
		$(document).ready(function(){
			$("#showCitizen").click(function(){
				$.ajax({
					url: '/API/citizen/'+$('#citizenUuid').val(),
					method: "GET",
					data: {},
					success: function(citizen){
						$('#citizenFirstName').html(citizen.firstName);
						$('#citizenLastName').html(citizen.lastName);
					},
					dataType: 'json'
				});
			});
		});
	</script>
{% endblock %}